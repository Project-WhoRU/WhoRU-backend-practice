{{>layout/header}}

<div class="mx-auto" style="width: 500px;">
  <form method="post" action="/create/questions" onsubmit="return checkInput()">
    <input type="hidden" name="type" value="MULTIPLE_CHOICE">
    <input type="hidden" name="domain-address" value={{domain-address}}>

    <div class="form-group">
      <label for="question">질문</label>
      <input class="form-control" id="question" name="question">
    </div>

    <div class="form-group">
      <label for="example1" class="col-form-label ">1번 보기</label>
      <div class>
        <input class="form-control" id="example1" name="examples.ex1">
      </div>
    </div>
    <div class="form-group">
      <label for="example2" class="col-form-label">2번 보기</label>
      <div class=>
        <input class="form-control" id="example2" name="examples.ex2">
      </div>
    </div>
    <div class="form-group">
      <label for="example3" class="col-form-label">3번 보기</label>
      <div class>
        <input class="form-control" id="example3" name="examples.ex3">
      </div>
    </div>

    <div class="form-group">
      <label for="answer">정답</label>
      <select class="form-control" id="answer" name="answer">
        <option value="1">1번</option>
        <option value="2">2번</option>
        <option value="3">3번</option>
      </select>
    </div>

    <a href="/create/questions/question-type" role="button" class="btn btn-secondary">뒤로 가기</a>
    <button type="submit" class="btn btn-success">다음 문제 만들기</button>
    <button type="submit" formaction="/create/questions/complete" class="btn btn-primary">문제 완성</button>
  </form>
</div>

<script>
  function checkInput() {
    let question = document.getElementById("question").value.replace(/\s/g, "");
    let example1 = document.getElementById("example1").value.replace(/\s/g, "");
    let example2 = document.getElementById("example2").value.replace(/\s/g, "");
    let example3 = document.getElementById("example3").value.replace(/\s/g, "");
    let answer = document.getElementById("answer").value.replace(/\s/g, "");
    // 빈 문자열인지 검사
    if (!question || !example1 || !example2 || !example3 || !answer) {
      alert("빈문자열이 입력되었습니다.");
      return false;
    }
  }
</script>

{{>layout/footer}}
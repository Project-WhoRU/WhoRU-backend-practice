{{>layout/header}}

<div class="mx-auto" style="width: 500px;">
  <form method="post" action="/create/questions" onsubmit="return checkInput()">
    <input type="hidden" name="type" value="SHORT_ANSWER">
    <input type="hidden" name="domain-address" value={{domain-address}}>

    <div class="form-group">
      <label for="question">질문</label>
      <input class="form-control" id="question" name="question">
    </div>

    <div class="form-group">
      <label for="answer">정답</label>
      <input class="form-control" id="answer" name="answer">
    </div>

    <a href="/question-type" role="button" class="btn btn-secondary">뒤로 가기</a>
    <button type="submit" class="btn btn-success">다음 문제 만들기</button>
    <button type="submit" formaction="/create/questions/complete" class="btn btn-primary">문제 완성</button>
  </form>
</div>

<script>
  function checkInput() {
    let question = document.getElementById("question").value.replace(/\s/g, "");
    let answer = document.getElementById("answer").value.replace(/\s/g, "");
    // 빈 문자열인지 검사
    if (!question || !answer) {
      alert("빈문자열이 입력되었습니다.");
      return false;
    }
  }
</script>

{{>layout/footer}}